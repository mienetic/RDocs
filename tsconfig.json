{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "noEmit": true,
        "types": [
            "vitepress/client"
        ]
    },
    "include": [
        "docs/**/*.ts",
        "docs/**/*.vue",
        "docs/**/*.md",
        "docs/.vitepress/**/*.ts",
        "docs/.vitepress/**/*.vue"
    ]
}